<odoo>
    <record id="view_wizard_reparto_form" model="ir.ui.view">
        <field name="name">wizard.reparto.form</field>
        <field name="model">empresa.wizard_reparto</field>
        <field name="arch" type="xml">
            <form string="Crear Reparto">
                <group>
                    <field name="empleado_id"/>
                    <field name="vehiculo_id"/>
                    <field name="distancia_km"/>
                    <field name="peso_kg"/>
                    <field name="volumen_m3"/>
                    <field name="observaciones"/>
                    <field name="cliente_emisor_id"/>
                    <field name="nombre_receptor"/>
                    <field name="apellidos_receptor"/>
                    <field name="urgencia"/>
                </group>
                <footer>
                    <button string="Crear Reparto" type="object" name="crear_reparto" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
