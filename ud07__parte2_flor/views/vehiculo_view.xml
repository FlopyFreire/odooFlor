<odoo>
    <record id="view_vehiculo_tree" model="ir.ui.view">
        <field name="name">vehiculo.tree</field>
        <field name="model">empresa.vehiculo</field>
        <field name="arch" type="xml">
            <tree string="Vehículos">
                <field name="tipo"/>
                <field name="matricula"/>
                <field name="descripcion"/>
            </tree>
        </field>
    </record>

    <record id="view_vehiculo_form" model="ir.ui.view">
        <field name="name">vehiculo.form</field>
        <field name="model">empresa.vehiculo</field>
        <field name="arch" type="xml">
            <form string="Vehículo">
                <sheet>
                    <group>
                        <field name="tipo"/>
                        <field name="matricula"/>
                        <field name="descripcion"/>
                        <field name="foto" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
